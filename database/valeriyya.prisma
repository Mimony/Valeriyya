generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

datasource db {
  provider = "mongodb"
  url      = "mongodb+srv://Client:MomsSpaghetti@cluster0.i1oux.mongodb.net/myFirstDatabase?retryWrites=true&w=majority"
}

model guild {
  id    String @id @default(dbgenerated()) @map("_id") @db.ObjectId
  gid   String @unique
  cases Cases  @relation(fields: [caseId], references: [id])

  caseId String @db.ObjectId
}

model Cases {
  id       String @id @default(dbgenerated()) @map("_id") @db.ObjectId
  message  String? @unique
  number   Int    @unique
  action   String
  staff    String
  target   String
  date     Int
  reason   String
  duration Int @default(0)

  guild guild[]
}
